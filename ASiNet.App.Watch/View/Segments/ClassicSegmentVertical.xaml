<bs:BaseSegment x:Class="ASiNet.App.Watch.View.Segments.ClassicSegmentVertical"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bs="clr-namespace:ASiNet.App.Watch.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASiNet.App.Watch.View.Segments"
             mc:Ignorable="d" IsHitTestVisible="False">
    <Path x:Name="Segment" Fill="White" HorizontalAlignment="Center" Margin="1" VerticalAlignment="Center" Stretch="Uniform">
        <Path.Data>
            <PathGeometry>
                <PathFigure IsClosed="True" StartPoint="10,0">
                    <LineSegment Point="20,10"/>
                    <LineSegment Point="20,100"/>
                    <LineSegment Point="10,110"/>
                    <LineSegment Point="0,100"/>
                    <LineSegment Point="0,10"/>
                </PathFigure>
            </PathGeometry>
        </Path.Data>
    </Path>
</bs:BaseSegment>
