<bs:BaseSegment x:Class="ASiNet.App.Watch.View.Separators.ClassicSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bs="clr-namespace:ASiNet.App.Watch.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASiNet.App.Watch.View.Separators"
             xmlns:vm="clr-namespace:ASiNet.App.Watch.ViewModel"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance vm:NumberVM}">
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Path x:Name="Segment" Width="20" Fill="White" Stretch="None">
            <Path.Data>
                <GeometryGroup>
                    <PathGeometry>
                        <PathFigure IsClosed="True" StartPoint="10,00">
                            <LineSegment Point="20,10"/>
                            <LineSegment Point="20,20"/>
                            <LineSegment Point="10,30"/>
                            <LineSegment Point="0,20"/>
                            <LineSegment Point="0,10"/>
                        </PathFigure>
                    </PathGeometry>
                    <PathGeometry>
                        <PathFigure IsClosed="True" StartPoint="10,130">
                            <LineSegment Point="20,140"/>
                            <LineSegment Point="20,150"/>
                            <LineSegment Point="10,160"/>
                            <LineSegment Point="0,150"/>
                            <LineSegment Point="0,140"/>
                        </PathFigure>
                    </PathGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Viewbox>
</bs:BaseSegment>
